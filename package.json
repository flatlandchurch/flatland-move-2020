{
  "devDependencies": {
    "@dmsi/prettier-config": "^1.3.0",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "sass": "^1.23.7"
  },
  "scripts": {
    "build:css": "sass ./src/styles/index.scss public/style.css",
    "prettier": "prettier *.{js,css,json,md,html} --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "prettier": "@dmsi/prettier-config",
  "lint-staged": {
    "*.{js,css,json,md,html}": [
      "prettier --write",
      "git add"
    ]
  }
}
